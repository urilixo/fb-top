<div class="flex flex-col w-full items-center bg-slate-700">
<h2 class="text-white font-semibold">Log in</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="grid gap-6 mb-6 ">
  <div class="field">
    <%= f.label :email, class: "font-medium text-white"%><br />
    <i class="pointer-events-none absolute py-3 px-4 text-gray-300 fas fa-envelope"></i>

    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input rounded-2xl  bg-slate-600 appearance-none block pl-14" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "font-medium text-white" %><br />
    <i class="pointer-events-none absolute py-3 px-4 text-gray-300 fas fa-key"></i>
    <%= f.password_field :password, autocomplete: "current-password", class: "form-input rounded-2xl  bg-slate-600 appearance-none block pl-14" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, class: "text-white" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "button background-white text-white" %>
  </div>
</div>
<% end %>

<%= render "devise/shared/links" %>
</div>

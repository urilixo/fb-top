<div class="flex flex-col w-full items-center py-4 bg-slate-700">
  <h2 class="text-white font-semibold">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email, class: "font-medium text-white" %><br>
      <i class="pointer-events-none absolute py-3 px-4 text-gray-300 fas fa-envelope"></i>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "rounded-2xl  bg-slate-600 appearance-none block pl-14" %>
    </div>

    <div class="field">
      <%= f.label :password, class: "font-medium text-white" %>
      <% if @minimum_password_length %>
      <em class="text-gray-200">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <i class="pointer-events-none absolute py-3 px-4 text-gray-300 fas fa-unlock"></i>
      <%= f.password_field :password, autocomplete: "new-password", class: "rounded-2xl  bg-slate-600 appearance-none block pl-14" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, class: "font-medium text-white" %><br />
      <i class="pointer-events-none absolute py-3 px-4 text-gray-300 fas fa-unlock-alt"></i>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "rounded-2xl  bg-slate-600 appearance-none block pl-14" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: "font-medium text-slate-700 bg-white rounded my-2 py-1 px-10 ml-10 px-20" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
